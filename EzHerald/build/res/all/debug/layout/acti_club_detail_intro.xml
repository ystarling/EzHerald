<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <LinearLayout 
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:padding="5dp">
	        
		        <ImageView 
			        android:id="@+id/acti_club_detail_icon"
			        android:layout_width="65dp"
			        android:layout_height="65dp"
			        android:layout_weight="1"/>
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="10"
	            android:orientation="vertical"
				android:gravity="center_vertical|left"
	            android:layout_gravity="center" >
	            
	            <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/acti_club_detail_name"
			        android:textSize="20sp"
			        />
	            
	        </LinearLayout>
	            
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:layout_weight="0"
	            android:gravity="center">
	            
	            <Button 
			        android:id="@+id/acti_club_detail_focus"
			        android:layout_width="wrap_content"
			        android:layout_height="40sp"
			        android:textSize="15sp"
			        android:layout_marginRight="4sp"/>
	            
	        </LinearLayout>
	              
	         
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="3sp"
	        android:layout_marginLeft="4sp"
	        android:layout_marginRight="4sp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:textColor="#0000ff"
	            android:text="简介:"/>
	        
	        <ProgressBar   
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/acti_club_detail_intro_progress"/>
	        
	        <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/acti_club_detail_intro"
		        android:textSize="17sp"
		        android:layout_marginLeft="5sp"
		        android:layout_marginRight="5sp" />

	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10sp"
	        android:layout_marginLeft="4sp"
	        android:layout_marginRight="4sp"
	        android:layout_marginBottom="50sp"
	        >
	        
	        <TextView 
	            android:id="@+id/acti_club_detai_comment_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:textColor="#0000ff"
	            android:text="留言:"
	            />
	        
	        <ProgressBar 
	            android:id="@+id/acti_club_detail_msg_progress"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	             />
	        
	        <TextView 
	            android:id="@+id/acti_club_detail_more_msg"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3sp"
	            android:textColor="#D2691E"
	            />
	        
	        <ListView 
		        android:id="@+id/acti_club_detail_msg_list"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#DEB887"
		        android:layout_marginLeft="6sp"
		        android:layout_marginRight="6sp">
	    	</ListView>
        
	    </LinearLayout>

	</LinearLayout>
    
    <LinearLayout 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:gravity="bottom">
   
        <EditText 
	        android:id="@+id/acti_club_detail_write_msg"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	         />
    
	    <Button 
	        android:id="@+id/acti_club_detail_send_msg"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="40sp"
	        android:text="留言"
	        />
        
    </LinearLayout>
 
</RelativeLayout>


