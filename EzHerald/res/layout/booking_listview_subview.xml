<RelativeLayout
    android:id="@+id/widget57"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/booking_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignTop="@+id/booking_deadline"
        android:layout_alignLeft="@+id/booking_caption"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/booking_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/booking_icon"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/booking_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignTop="@+id/booking_is_order"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textIsSelectable="false" />
    <TextView
        android:id="@+id/booking_is_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/booking_icon"
        android:layout_width="111dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
