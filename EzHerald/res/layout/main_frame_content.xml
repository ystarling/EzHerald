<?xml version="1.0" encoding="utf-8"?>
<!-- 主界面内容的Fragment -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.herald.ezherald"
    android:id="@+id/main_frame_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 放置横向滑动的广告栏之类的.. -->

		<FrameLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="150dp"
		    android:background="#ffffff"
		    >
		    
		   <org.taptwo.android.widget.ViewFlow
                android:id="@+id/main_frame_viewflow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:sidebuffer="5" >
            </org.taptwo.android.widget.ViewFlow>

            
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		        android:layout_gravity="bottom"
		        android:gravity="center"
		        android:padding="3dp"
		        android:background="#88252525"
		        >
		        
		        <org.taptwo.android.widget.CircleFlowIndicator
                	android:id="@+id/main_frame_viewflow_indic"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_gravity="center_horizontal|bottom"
                	android:padding="2dp"
                	app:fadeOut="0"
                	app:activeColor="#ffffff"
                	app:activeType="fill"
                	app:inactiveColor="#ffffff"
                	app:radius="4dp"
                />
		    </LinearLayout>
		    
		</FrameLayout>
		

        <!-- 从各个模块更新过来的信息，每个模块一个Grid放置 -->

        <GridView
            android:id="@+id/main_frame_content_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
          >
        </GridView>
    </LinearLayout>

</FrameLayout>