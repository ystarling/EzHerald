<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >
    
    <ScrollView 
        android:id="@+id/acti_acti_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        
        <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingLeft="5sp"
	    android:paddingRight="5sp" >
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <LinearLayout 
	            android:layout_width="65dp"
	            android:layout_height="65dp"
	            android:padding="5dp">
	            
	            <ImageView 
			        android:id="@+id/acti_detail_club_icon"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        />
	            
	        </LinearLayout>
	        
		    
		    <TextView 
		        android:id="@+id/acti_detail_club_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="17sp"
		        android:layout_gravity="center|left"
		        android:layout_marginLeft="4sp"
		        android:textColor="#ff0000"
		        />
	        
	    </LinearLayout>
	    
	    <TextView 
	        android:id="@+id/acti_detail_acti_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="17sp"
	        android:textColor="#0000ff"/>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="时间:"/>
		    <TextView 
		        android:id="@+id/acti_detail_acti_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="地点:"/>
		    
		    <TextView 
		        android:id="@+id/acti_detail_acti_place"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	        
	    </LinearLayout>
	    
	    
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="活动简介:"/>
	    <TextView 
	        android:id="@+id/acti_detail_acti_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5sp"
	        android:layout_marginBottom="5sp"
	        />
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="发布时间:"/>
		    <TextView 
		        android:id="@+id/acti_detail_acti_pubtime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />   
	    </LinearLayout>
	    
	    
	    
	    <ImageView 
	        android:id="@+id/acti_detail_acti_pic"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        />
	    
	    <LinearLayout 
	        android:id="@+id/acti_detail_vote"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:visibility="gone"
	        >
	        
	    </LinearLayout>
	    
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10sp"
	        android:layout_marginBottom="50sp"
	        android:visibility="gone"
	        >
		    
	        
	        <TextView 
	            android:id="@+id/acti_acti_detai_comment_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:textColor="#0000ff"
	            android:text="评论:"
	            />
	        
	        <TextView 
	            android:id="@+id/acti_acti_detail_more_msg"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3sp"
	            android:textColor="#D2691E"
	            />
	        
	        
	        <TextView 
	            android:id="@+id/acti_acti_detail_more_msg"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3sp"
	            android:textColor="#D2691E"
	            />
	        
	        <com.herald.ezherald.activity.ScrollListView
		        android:id="@+id/acti_acti_detail_msg_list"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#DEB887"
		        android:layout_marginLeft="6sp"
		        android:layout_marginRight="6sp">
	    	</com.herald.ezherald.activity.ScrollListView>
        
	    </LinearLayout>
	    

	</LinearLayout>
        
        
    </ScrollView>
    
    
	
    <LinearLayout 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:gravity="bottom"
        android:visibility="gone"
        >
   
        <EditText 
	        android:id="@+id/acti_acti_detail_write_msg"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	         />
    
	    <Button 
	        android:id="@+id/acti_acit_detail_send_msg"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="40sp"
	        android:text="评论"
	        />
        
    </LinearLayout>
    
    
    
</RelativeLayout>


