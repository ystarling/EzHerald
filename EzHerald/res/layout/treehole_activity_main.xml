<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/treehole_mainlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/treehole_background_1"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/treehole_circleico"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/Image_treehole_circle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看点啥"
            android:id="@+id/openholebtn"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Image_treehole_circle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说点啥"
            android:id="@+id/writesecret"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Image_treehole_circle" />




    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_treehole"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        ></ListView>


</LinearLayout>
